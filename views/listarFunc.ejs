<!DOCTYPE html>
<html>
    <head>
        <title><%= title %></title>
        <link rel='stylesheet' href='/stylesheets/style.css' />
        <link rel='stylesheet' href='/stylesheets/bootstrap.min.css' />
        
        <style>
            .bg-primary{
              background-color: #ffa500 !important;
            }
            .navbar-dark .navbar-nav .nav-link {
            color: black;
            text-decoration: solid;
        }
        </style>

     </head>

      <body style="padding: 0px !important">
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <a class="navbar-brand" href=""><img src="/img/icon.png" style="width: 50px" /></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item active">
            <a class="nav-link" href="/">Início <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/cadastro">Cadastrar Empresa</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/funcionario">Cadastrar Funcionário</a>
          </li>
          <li class="nav-item">
                <a class="nav-link" href="/listarEmpresas">Listar Empresas</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/listarFunc">Listar Funcionários</a>
          </li>
        </ul>
      </div>
    </nav>
          <div class="container-fluid">
            <br>
            <div> <h1><%= title %></h1> </div>
            <br>
            <table class="table">
                    <thead class="thead-dark">
                      <tr>
                        <th>Nome Funcionário</th>
                        <th>Matricula</th>
                        <th>RG</th>
                        <th>CPF</th>
                        <th>Rua</th>
                        <th>Numero</th>
                        <th>Bairro</th>
                        <th>Cidade</th>
                        <th>Editar</th>
                        <th>Excluir</th>
                      </tr>
                    </thead>
          
                    <tbody>
                      <% docs.forEach(function(dados) { %>
                      <tr>
                        <td><%= dados.nome%></td>
                        <td><%= dados.matricula%></td>
                        <td><%= dados.rg%></td>
                        <td><%= dados.cpf%></td>
                        <td><%= dados.rua%></td>
                        <td><%= dados.numero%></td>
                        <td><%= dados.bairro%></td>
                        <td><%= dados.cidade%></td>
                        <td><button type="button" class="btn btn-warning" onclick="window.location.href = '/funcedit/<%= dados._id%>';">Editar</button></td>
                        <td><button type="button" class="btn btn-danger" onclick="window.location.href = '/funcdeletar/<%= dados._id%>';">Excluir</button></td>
                      </tr>
                      <%})%>
                    </tbody>
                  </table>
          </div>
      </body>

</html>
<style>
        input[type="number"]::-webkit-outer-spin-button, input[type="number"]::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }
    
        input[type="number"] {
            -moz-appearance: textfield;
        }
</style>
    